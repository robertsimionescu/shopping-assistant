{
    "name" : "eMAG Shopping Assitant",
    "version" : "1.0.0",
    "description" : "Asistent de cumparaturi",
    "background": {
        "scripts": ["js/jquery-2.1.0.min.js", "js/library.js", "js/background.js"],
        "persistent": false
    },
    "browser_action" : {
        "default_popup": "popup.html",
        "default_icon" : "images/icon-gray.png"
    },
    "permissions": ["tabs", "<all_urls>", "notifications"],
    "web_accessible_resources": [
        "images/icon-color-128.png"
    ],
    "icons": {
        "16": "images/icon-color-16.png",
        "48": "images/icon-color-48.png",
        "128": "images/icon-color-128.png" },
    "manifest_version": 2
}